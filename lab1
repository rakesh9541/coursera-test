{

cout << "Name: " name <<", Rollnumbers: "<rollno <<"grade: "<< grade<<"\n";
}

void student :: sortdetails (student std[], int n)
{

cout<<" *** DETAILS SORTED *** "<< endl);

int i, j;
student min;

for(j=0; j<n-1; j++)
{

   for (i=0; i<n-j-1; i++)

   {

       if (std [i].rollno > std [i+1].rollno)

{
    min = std[i];

    std [i] = std [i+1];
    std [i+1] = min;

}
   }
}
